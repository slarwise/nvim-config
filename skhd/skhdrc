# yabai shortcuts
#
# Current leaders:
#   - alt: Focus windows, toggle float, rotate windows
#   - shift + alt: Increase window size
#   - shift + cmd: Decrease window size, send to other space
#   - shift + ctrl: Move window
#
# Unused keys:
#   - alt - [[w,a,s,d], [x]]
#   - shift + alt - [z,x,c]
#   - shift + cmd - x
#   - shift + ctrl - [j,k]
#
#   Maybe let spaces be z,x,c
#
# Areas of usage:
#   + Focus windows, spaces: alt
#       + focus windows: alt - [h,j,k,l]
#       + focus prev/next space: alt - [p,n]
#       + toggle window parent zoom: alt - d
#       + toggle window fullscreen mode: alt - f
#       + toggle float and center: alt - t
#       + toggle float and fill 4/10 of left/center/rightmost screen: alt -
#               [z,x,c]
#   + Move windows around in the tree, rotate etc: shift + cmd, shift + alt
#       + move window: shift + cmd - [h,j,k,l]
#       + swap window: shift + alt - [h,j,k,l]
#       + rotate: shift + cmd - r
#       + send to prev/next space: shift + cmd [p,n]
#       + mirror tree x/y-axis: shift + cmd - [x,y]
#       + toggle window split type: shift + cmd - e
#   + Change size of windows
#       + increase size: shift + alt - [a,s,w,d]
#       + decrease size: shift + cmd - [a,s,w,d]
#       + balance size: shift + alt - 0
#   + Move floating windows
#       + shift + ctrl - [h,j,k,l]
#       

# focus window
# alt - h : yabai -m window --focus west
# alt - j : yabai -m window --focus south
# alt - k : yabai -m window --focus north
# alt - l : yabai -m window --focus east
alt - h [
    "kitty" : ~/Dropbox/Chalmers/projects/kitty-yabai-navigator/kitty_yabai_navigator west
    *       : yabai -m window --focus west
]
alt - j [
    "kitty" : ~/Dropbox/Chalmers/projects/kitty-yabai-navigator/kitty_yabai_navigator south
    *       : yabai -m window --focus south
]
alt - k [
    "kitty" : ~/Dropbox/Chalmers/projects/kitty-yabai-navigator/kitty_yabai_navigator north
    *       : yabai -m window --focus north
]
alt - l [
    "kitty" : ~/Dropbox/Chalmers/projects/kitty-yabai-navigator/kitty_yabai_navigator east
    *       : yabai -m window --focus east
]

# focus space
alt - n : skhd --key "ctrl - right"
alt - p : skhd --key "ctrl - left"

# toggle window parent zoom
alt - d : yabai -m window --toggle zoom-parent

# toggle window fullscreen zoom
alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
shift + cmd - e : yabai -m window --toggle split

# float / unfloat window and center on screen
alt - t : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# Make floating window fill left-most 4/10 of the screen
alt - z : yabai -m window --toggle float;\
          yabai -m window --grid 10:10:0:0:4:10

# Make floating window fill middle 4/10 of the screen
alt - x : yabai -m window --toggle float;\
          yabai -m window --grid 10:10:3:0:4:10

# Make floating window fill right-most 4/10 of the screen
alt - c : yabai -m window --toggle float;\
          yabai -m window --grid 10:10:6:0:4:10

# Centered floating variants
shift + cmd - 1 : if [[ "$(yabai -m query --windows --window | jq '.floating')" == 1 ]];\
                    then yabai -m window --grid 1:20:6:0:8:1; fi

shift + cmd - 2 : if [[ "$(yabai -m query --windows --window | jq '.floating')" == 1 ]];\
                    then yabai -m window --grid 1:20:5:0:10:1; fi

shift + cmd - 3 : if [[ "$(yabai -m query --windows --window | jq '.floating')" == 1 ]];\
                    then yabai -m window --grid 1:20:4:0:12:1; fi

shift + cmd - 4 : if [[ "$(yabai -m query --windows --window | jq '.floating')" == 1 ]];\
                    then yabai -m window --grid 1:20:3:0:14:1; fi

shift + cmd - 5 : if [[ "$(yabai -m query --windows --window | jq '.floating')" == 1 ]];\
                    then yabai -m window --grid 1:20:2:0:16:1; fi

shift + cmd - 6 : if [[ "$(yabai -m query --windows --window | jq '.floating')" == 1 ]];\
                    then yabai -m window --grid 1:20:1:0:18:1; fi

# move window in tree
shift + cmd - h : yabai -m window --warp west
shift + cmd - j : yabai -m window --warp south
shift + cmd - k : yabai -m window --warp north
shift + cmd - l : yabai -m window --warp east

# swap window in tree
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# rotate tree
shift + cmd - r : yabai -m space --rotate 90

# send window to desktop and follow focus
shift + cmd - n : yabai -m window --space next; skhd --key "ctrl - right"
shift + cmd - p : yabai -m window --space prev; skhd --key "ctrl - left"

# mirror tree y-axis
shift + cmd - y : yabai -m space --mirror y-axis

# mirror tree x-axis
shift + cmd - x : yabai -m space --mirror x-axis

# increase window size
shift + alt - a : yabai -m window --resize left:-40:0
shift + alt - s : yabai -m window --resize bottom:0:40
shift + alt - w : yabai -m window --resize top:0:-40
shift + alt - d : yabai -m window --resize right:40:0

# decrease window size
shift + cmd - a : yabai -m window --resize left:40:0
shift + cmd - s : yabai -m window --resize bottom:0:-40
shift + cmd - w : yabai -m window --resize top:0:40
shift + cmd - d : yabai -m window --resize right:-40:0

# balance size of windows
shift + cmd - 0 : yabai -m space --balance

# Toggle padding and borders
shift + alt - p : yabai -m space --toggle padding;\
                  yabai -m space --toggle gap

# move window
shift + ctrl - h : yabai -m window --move rel:-40:0
shift + ctrl - j : yabai -m window --move rel:0:40
shift + ctrl - k : yabai -m window --move rel:0:-40
shift + ctrl - l : yabai -m window --move rel:40:0

# App specific hotkeys
cmd - j [
    "Skim" : skhd --key "down"
    "Förhandsvisning": skhd --key "down"
    "Safari": skhd --key "down"
]

cmd - k [
    "Skim" : skhd --key "up"
    "Förhandsvisning": skhd --key "up"
    "Safari": skhd --key "up"
]

cmd - return : open -a "Kitty"
shift + cmd - return : open -a "Safari"
