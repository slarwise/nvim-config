export NVIM_IS_RUNNING=0

preexec() {
    if [[ $1 == "nvim"* ]]
    then
        export NVIM_IS_RUNNING=1
    fi
}

precmd() {
    if [ "$NVIM_IS_RUNNING" -eq 1 ]
    then
        export NVIM_IS_RUNNING=0
    fi
}
